<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:layout_width="156dp"
        android:layout_height="134dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="App Logo"
        android:src="@mipmap/iconapp_foreground" />

    <TextView
        android:text="Tạo tài khoản mới"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0036FF"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etFullName"
        android:hint="Họ và tên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etEmail"
        android:hint="Địa chỉ Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etPassword"
        android:hint="Mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="14dp"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/etPassword2"
        android:hint="Nhập lại mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="14dp"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnSendOtp"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0078FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:text="Đăng nhập ngay"
        android:textColor="?attr/colorPrimary" />

    <LinearLayout
        android:id="@+id/otpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvOtpSent"
            android:text="Nhập mã OTP được gửi đến Email của bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etOtp"
            android:hint="Nhập mã xác thực"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnVerifyOtp"
            android:text="Xác nhận"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            app:backgroundTint="#0084FF"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

</LinearLayout>
